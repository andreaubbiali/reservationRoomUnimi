<%- include('header') %>
<div class="container-fluid">

    <h1 class="h1Title">Book a place in the room</h1>

    <div class="row rowRoom">

        <div class="col-md-3 roomInfoCol">

            <div class="roomInfo">
                Room name: <span class="font-weight-bold"><%= room.name %></span> </br>
                Capacity: <span class="font-weight-bold"><%= room.capacity %></span> </br>
                Room manager: <span class="font-weight-bold"><%= room.roomManager %></span>
            </div>

        </div>

        <div class="col col-md-9 formRoom">

            <form action="/book" method="POST">
                <input type="text" name="roomID" value="<%= room._id %>" style="display:none" />
                <div class="bookForm form-group">
                    <div class="mb-4">
                        <label for="Date">Date</label>
                        <input id="Date" class="form-control" type="date" name="date" />
                    </div>
                    <div class="mb-4">
                        <label for="slot">Slot</label>
                        <select id="slot" class="form-control" aria-label="Default select example" name="slot">
                            <option selected value="MORNING">Morning</option>
                            <option value="AFTERNOON">Afternoon</option>
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-block mb-4 btnColor">Book</button>
                    </div>
                </div>
            </form>


        </div>

    </div>        
    
        <% if(error != null){ %>
            <p class="text-danger">
                <%= error %>
            </p> 
        <% } %>
</div>
<%- include('footer') %>