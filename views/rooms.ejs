<%- include('header') %>
<div class="container-fluid">

    <h1 class="h1Title">Rooms</h1>

    <div class="row">
        <% for(var i=0; i<rooms.length; i++) {%>
            <div class="col-md-4 colStyle">
                
                <a href="/room/<%= rooms[i]._id %>" style="text-decoration:none">
                    <span class="colElement">
                            <p class="pRoomElement">
                                Room name: <span class="font-weight-bold"><%= rooms[i].name %></span></br>
                                Capacity: <span class="font-weight-bold"><%= rooms[i].capacity %></span></br>
                                Room manager: <span class="font-weight-bold"><%= rooms[i].roomManager %></span>
                            </p>
                    </span>
                </a>


            </div>
        <% } %>
    </div>

    <% if(error != null){ %>
        <p class="text-danger">
            <%= error %>
        </p> 
    <% } %>

</div>
<%- include('footer') %>