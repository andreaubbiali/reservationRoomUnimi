<%- include('header') %>
<div class="container-fluid">

    <h1>Rooms</h1>

    <div class="row">
        <% for(var i=0; i<rooms.length; i++) {%>
            <div class="col col-lg-4">
                <a href="/room/<%= rooms[i]._id %>">
                    <div style="width:200px;height:100px;background-color:yellow">
                        Room name: <%= rooms[i].name %></br>
                        Capacity: <%= rooms[i].capacity %>
                    </div>
                </a>
            </div>
        <% } %>
    </div>

    <% if(error != null){ %>
        <p class="text-danger">
            <%= error %>
        </p> 
    <% } %>

</div>
<%- include('footer') %>